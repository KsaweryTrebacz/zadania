import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Scanner;

public class zadanie

{
    public static void main(String[] args)
            throws IOException
    {
        float x = 0;
        float y = 0;

        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        System.out.println("Podaj wartość x:    ");
        x = Float.parseFloat(br.readLine());
        System.out.println("Podaj wartość y:    ");
        y = Float.parseFloat(br.readLine());

        Scanner in = new Scanner(System.in);
        System.out.print("Wybierz opcje: 1=suma, 2=różnica, 3=iloczyn, 4=iloraz     ");
        int choice = in.nextInt();
        switch (choice  )
        {
            case 1:
                float s = 0;
                s = x + y;
                System.out.printf("Suma wynosi: " + "%2.2f \n", + s);
                break;
            case 2:
                float r = 0;
                r = x - y;
                System.out.printf("Różnieca wynosi: " + "%2.2f \n", + r);
                break;
            case 3:
                float ic = 0;
                ic = x * y;
                System.out.printf("Iloczyn wynosi: " + "%2.2f \n", + ic);
                break;
            case 4:
                float il = 0;
                il = x / y;
                System.out.printf("Iloraz wynosi: " + "%2.2f \n", + il);
                break;
        }
    }
}
